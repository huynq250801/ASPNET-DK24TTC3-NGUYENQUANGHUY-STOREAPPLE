@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Store Apple";
}
<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@title</title>

    <!-- Font + CSS -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site-storeapple.css" asp-append-version="true" />
</head>
<body>

    <!-- ====== HEADER (Topbar + Header + Nav) ====== -->
    <div class="topbar">
        <div class="container row">
            <div>Hệ thống cửa hàng • Mua hàng: <strong>1900 6626</strong> • Bảo hành: <strong>1900 8036</strong></div>
            <div><a href="#">Tìm cửa hàng</a> • <a href="#">Tra cứu đơn</a></div>
        </div>
    </div>

    <header class="header">
        <div class="container row">
            <a class="logo" asp-controller="Home" asp-action="Index">
                <svg width="26" height="26" viewBox="0 0 24 24" fill="#fff" aria-hidden="true"><path d="M16.365 1.43c0 1.14-.49 2.254-1.29 3.13-.82.892-2.178 1.577-3.323 1.48-.145-1.097.498-2.26 1.28-3.083.855-.882 2.318-1.554 3.333-1.527zM21.75 17.262c-.733 1.717-1.62 3.42-2.917 3.44-1.278.02-1.69-.83-3.15-.83-1.458 0-1.906.806-3.173.85-1.28.052-2.25-1.854-2.99-3.565-1.63-3.79-.21-8.59 2.3-8.62 1.068-.02 1.86.724 3.14.724 1.26 0 1.98-.726 3.336-.704 1.166.02 2.27.64 2.88 1.64-2.535 1.39-2.126 4.99.574 5.704z" /></svg>
                <span>Store Apple</span>
            </a>

            <label class="search" aria-label="Tìm kiếm">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="#aeb1b7"><path d="M21 21l-4.35-4.35m1.85-5.15a7 7 0 11-14 0 7 7 0 0114 0z" stroke="#aeb1b7" stroke-width="2" fill="none" stroke-linecap="round" /></svg>
                <input placeholder="Tìm iPhone 16, MacBook M3, AirPods..." />
            </label>

            <div class="actions">
                <button class="iconbtn" title="Tài khoản" aria-label="Tài khoản">👤</button>
                <button class="iconbtn" title="So sánh" aria-label="So sánh">⚖️</button>
                <button class="iconbtn" title="Giỏ hàng" aria-label="Giỏ hàng" onclick="toggleCart()">🛒</button>
            </div>
        </div>

        <nav class="nav">
            <div class="container">
                <ul class="menu">
                    <li><a href="#">iPhone</a></li>
                    <li><a href="#">iPad</a></li>
                    <li><a href="#">Mac</a></li>
                    <li><a href="#">Watch</a></li>
                    <li><a href="#">Âm thanh</a></li>
                    <li><a href="#">Phụ kiện</a></li>
                    <li><a href="#">Dịch vụ</a></li>
                    <li><a href="#">Tin tức</a></li>
                    <li><a href="#" class="badge">Khuyến mãi</a></li>
                </ul>
            </div>
        </nav>
    </header>
    <!-- ====== END HEADER ====== -->

    <main role="main">
        @RenderBody()
    </main>

    <!-- ====== FOOTER ====== -->
    <footer class="footer">
        <div class="container footgrid">
            <div>
                <h4>Store Apple</h4>
                <p class="muted">Chuỗi cửa hàng chuyên Apple – hàng chính hãng VN/A, giá tốt, bảo hành tại Việt Nam.</p>
                <p class="muted">Hotline: 1900 6626 • Bảo hành: 1900 8036</p>
            </div>
            <div>
                <h4>Thông tin</h4>
                <a href="#">Giới thiệu</a><br />
                <a href="#">Tuyển dụng</a><br />
                <a href="#">Hệ thống cửa hàng</a>
            </div>
            <div>
                <h4>Chính sách</h4>
                <a href="#">Bảo hành</a><br />
                <a href="#">Đổi trả</a><br />
                <a href="#">Giao hàng</a>
            </div>
            <div>
                <h4>Kết nối</h4>
                <a href="#">Facebook</a><br />
                <a href="#">YouTube</a><br />
                <a href="#">Zalo</a>
            </div>
        </div>
        <div class="container" style="margin-top:20px;color:#8b8e93;font-size:13px">
            © @DateTime.Now.Year Store Apple
        </div>
    </footer>
    <!-- ====== END FOOTER ====== -->
    <!-- (tuỳ chọn) Cart Drawer demo + backdrop -->
    <div id="cart" class="cartdrawer">
        <div class="carthead">
            <strong>Giỏ hàng</strong>
            <button class="iconbtn" onclick="toggleCart()">✕</button>
        </div>
        <div id="cartItems" class="cartbody"></div>
        <div class="cartfoot"><a class="btn" href="#">Thanh toán</a></div>
    </div>
    <div id="backdrop" class="backdrop" onclick="toggleCart()"></div>

    <script src="~/js/storeapple.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
